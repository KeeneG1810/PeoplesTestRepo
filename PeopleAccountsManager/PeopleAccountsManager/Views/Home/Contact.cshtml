@{
    ViewData["Title"] = "Contact";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-4 mb-4">@ViewData["Title"]</h1>
            
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title">Get In Touch</h3>
                    <p class="lead">
                        Have questions or feedback about People Accounts Manager? Feel free to reach out!
                    </p>
                    
                    <hr class="my-4" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="bi bi-person-circle"></i> Contact Information</h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <strong>Name:</strong> Development Team
                                </li>
                                <li class="mb-2">
                                    <strong><i class="bi bi-envelope"></i> Email:</strong> 
                                    <a href="mailto:support@peopleaccountsmanager.com">support@peopleaccountsmanager.com</a>
                                </li>
                                <li class="mb-2">
                                    <strong><i class="bi bi-telephone"></i> Phone:</strong> +1 (555) 123-4567
                                </li>
                                <li class="mb-2">
                                    <strong><i class="bi bi-geo-alt"></i> Address:</strong> 
                                    123 Business Street<br />
                                    Suite 100<br />
                                    City, State 12345
                                </li>
                            </ul>
                        </div>
                        
                        <div class="col-md-6">
                            <h5><i class="bi bi-share"></i> Connect With Us</h5>
                            <div class="d-grid gap-2">
                                <a href="https://linkedin.com" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-linkedin"></i> LinkedIn
                                </a>
                                <a href="https://github.com" target="_blank" class="btn btn-outline-dark">
                                    <i class="bi bi-github"></i> GitHub
                                </a>
                                <a href="https://twitter.com" target="_blank" class="btn btn-outline-info">
                                    <i class="bi bi-twitter"></i> Twitter
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="alert alert-info" role="alert">
                        <h5 class="alert-heading"><i class="bi bi-info-circle"></i> Business Hours</h5>
                        <p class="mb-0">
                            Monday - Friday: 9:00 AM - 5:00 PM<br />
                            Saturday - Sunday: Closed
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
