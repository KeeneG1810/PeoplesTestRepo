@model IEnumerable<PeopleAccountsManager.Models.Person>
@{
    ViewData["Title"] = "Persons";
    var currentPage = (int)ViewData["CurrentPage"]!;
    var totalPages = (int)ViewData["TotalPages"]!;
    var totalRecords = (int)ViewData["TotalRecords"]!;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>
        <i class="bi bi-people"></i> Persons
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Person
    </a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Search Filters</h5>
        <form asp-action="Index" method="get">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <input type="text" name="searchIdNumber" class="form-control" 
                           placeholder="ID Number" value="@ViewData["SearchIdNumber"]" />
                </div>
                <div class="col-md-4 mb-2">
                    <input type="text" name="searchSurname" class="form-control" 
                           placeholder="Surname" value="@ViewData["SearchSurname"]" />
                </div>
                <div class="col-md-4 mb-2">
                    <input type="text" name="searchAccountNumber" class="form-control" 
                           placeholder="Account Number" value="@ViewData["SearchAccountNumber"]" />
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<p class="text-muted">Showing @Model.Count() of @totalRecords total records</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID Number</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Accounts</th>
                <th style="width: 250px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.IdNumber</td>
                        <td>@person.Name</td>
                        <td>@person.Surname</td>
                        <td>
                            <span class="badge bg-info">@person.Accounts.Count</span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@person.Code" class="btn btn-sm btn-info" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-controller="Accounts" asp-action="Index" asp-route-personId="@person.Code" 
                               class="btn btn-sm btn-success" title="View Accounts">
                                <i class="bi bi-wallet2"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@person.Code" class="btn btn-sm btn-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@person.Code" class="btn btn-sm btn-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">
                        <em>No persons found</em>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(currentPage - 1)"
                   asp-route-searchIdNumber="@ViewData["SearchIdNumber"]"
                   asp-route-searchSurname="@ViewData["SearchSurname"]"
                   asp-route-searchAccountNumber="@ViewData["SearchAccountNumber"]">
                    Previous
                </a>
            </li>
            
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" 
                       asp-route-page="@i"
                       asp-route-searchIdNumber="@ViewData["SearchIdNumber"]"
                       asp-route-searchSurname="@ViewData["SearchSurname"]"
                       asp-route-searchAccountNumber="@ViewData["SearchAccountNumber"]">
                        @i
                    </a>
                </li>
            }
            
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" 
                   asp-route-page="@(currentPage + 1)"
                   asp-route-searchIdNumber="@ViewData["SearchIdNumber"]"
                   asp-route-searchSurname="@ViewData["SearchSurname"]"
                   asp-route-searchAccountNumber="@ViewData["SearchAccountNumber"]">
                    Next
                </a>
            </li>
        </ul>
    </nav>
}
