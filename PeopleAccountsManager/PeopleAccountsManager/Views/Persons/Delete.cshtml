@model PeopleAccountsManager.Models.Person
@{
    ViewData["Title"] = "Delete Person";
}

<h1 class="text-danger">
    <i class="bi bi-trash"></i> Delete Person
</h1>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this person?
</div>

<div class="card shadow">
    <div class="card-body">
        <h4>Person Details</h4>
        <dl class="row">
            <dt class="col-sm-3">ID Number</dt>
            <dd class="col-sm-9">@Model.IdNumber</dd>
            
            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.Surname</dd>
            
            <dt class="col-sm-3">Number of Accounts</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.Accounts.Count</span>
            </dd>
        </dl>
        
        @if (Model.Accounts.Any())
        {
            <div class="alert alert-danger" role="alert">
                <strong>Cannot Delete!</strong> This person has @Model.Accounts.Count active account(s). 
                Please delete all accounts before deleting this person.
            </div>
        }
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Code" />
            @if (!Model.Accounts.Any())
            {
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            }
            else
            {
                <button type="submit" class="btn btn-danger" disabled>
                    <i class="bi bi-trash"></i> Delete (Disabled)
                </button>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
