@model PeopleAccountsManager.Models.Account
@{
    ViewData["Title"] = "Create Account";
    var personName = ViewData["PersonName"]?.ToString() ?? "Unknown";
    var personId = (int)ViewData["PersonId"]!;
}

<h1>
    <i class="bi bi-wallet-fill"></i> Create New Account
</h1>

<p class="text-muted">
    <i class="bi bi-person"></i> Person: <strong>@personName</strong>
</p>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PersonCode" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="AccountNumber" class="control-label"></label>
                        <input asp-for="AccountNumber" class="form-control" placeholder="Enter account number" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Account number must be unique</small>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="IsClosed" class="form-check-input" type="checkbox" />
                        <label asp-for="IsClosed" class="form-check-label"></label>
                        <small class="form-text text-muted d-block">Check if account is closed</small>
                    </div>
                    
                    <div class="alert alert-info" role="alert">
                        <strong>Note:</strong> Outstanding balance will be initialized to $0.00 and will be calculated from transactions.
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create
                        </button>
                        <a asp-action="Index" asp-route-personId="@personId" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
