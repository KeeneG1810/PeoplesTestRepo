@model PeopleAccountsManager.Models.Account
@{
    ViewData["Title"] = "Delete Account";
}

<h1 class="text-danger">
    <i class="bi bi-trash"></i> Delete Account
</h1>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this account? All associated transactions will also be deleted.
</div>

<div class="card shadow">
    <div class="card-body">
        <h4>Account Details</h4>
        <dl class="row">
            <dt class="col-sm-3">Person</dt>
            <dd class="col-sm-9">@Model.Person?.FullName</dd>
            
            <dt class="col-sm-3">Account Number</dt>
            <dd class="col-sm-9">@Model.AccountNumber</dd>
            
            <dt class="col-sm-3">Outstanding Balance</dt>
            <dd class="col-sm-9">
                <span class="@(Model.OutstandingBalance < 0 ? "text-danger" : "text-success")">
                    <strong>@Model.OutstandingBalance.ToString("C")</strong>
                </span>
            </dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsClosed)
                {
                    <span class="badge bg-danger">Closed</span>
                }
                else
                {
                    <span class="badge bg-success">Open</span>
                }
            </dd>
            
            <dt class="col-sm-3">Number of Transactions</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.Transactions.Count</span>
            </dd>
        </dl>
        
        @if (Model.Transactions.Any())
        {
            <div class="alert alert-danger" role="alert">
                <strong>Note:</strong> This account has @Model.Transactions.Count transaction(s) that will also be deleted.
            </div>
        }
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Code" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete Account
            </button>
            <a asp-action="Index" asp-route-personId="@Model.PersonCode" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
