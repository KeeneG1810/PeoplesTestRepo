@model PeopleAccountsManager.Models.Account
@{
    ViewData["Title"] = "Account Details";
}

<h1>
    <i class="bi bi-wallet2"></i> Account Details
</h1>

<div class="card shadow">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Person</dt>
            <dd class="col-sm-9">
                <a asp-controller="Persons" asp-action="Details" asp-route-id="@Model.PersonCode">
                    @Model.Person?.FullName
                </a>
            </dd>
            
            <dt class="col-sm-3">Account Number</dt>
            <dd class="col-sm-9">@Model.AccountNumber</dd>
            
            <dt class="col-sm-3">Outstanding Balance</dt>
            <dd class="col-sm-9">
                <span class="@(Model.OutstandingBalance < 0 ? "text-danger" : "text-success")">
                    <strong>@Model.OutstandingBalance.ToString("C")</strong>
                </span>
            </dd>
            
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsClosed)
                {
                    <span class="badge bg-danger">Closed</span>
                }
                else
                {
                    <span class="badge bg-success">Open</span>
                }
            </dd>
            
            <dt class="col-sm-3">Number of Transactions</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.Transactions.Count</span>
            </dd>
        </dl>
        
        @if (Model.Transactions.Any())
        {
            <hr />
            <h5>Recent Transactions</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.TransactionDate).Take(5))
                        {
                            <tr>
                                <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                                <td>@transaction.Description</td>
                                <td class="@(transaction.Amount < 0 ? "text-danger" : "text-success")">
                                    @transaction.Amount.ToString("C")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (Model.Transactions.Count > 5)
            {
                <p class="text-muted">Showing 5 of @Model.Transactions.Count transactions</p>
            }
        }
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Code" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-controller="Transactions" asp-action="Index" asp-route-accountId="@Model.Code" class="btn btn-primary">
            <i class="bi bi-cash-stack"></i> View All Transactions
        </a>
        <a asp-action="Index" asp-route-personId="@Model.PersonCode" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Accounts
        </a>
    </div>
</div>
