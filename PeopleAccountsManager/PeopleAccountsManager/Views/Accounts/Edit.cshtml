@model PeopleAccountsManager.Models.Account
@{
    ViewData["Title"] = "Edit Account";
    var personName = ViewData["PersonName"]?.ToString() ?? "Unknown";
}

<h1>
    <i class="bi bi-pencil"></i> Edit Account
</h1>

<p class="text-muted">
    <i class="bi bi-person"></i> Person: <strong>@personName</strong>
</p>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Code" />
                    <input type="hidden" asp-for="PersonCode" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="AccountNumber" class="control-label"></label>
                        <input asp-for="AccountNumber" class="form-control" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        <small class="form-text text-muted">Account number must be unique</small>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="OutstandingBalance" class="control-label"></label>
                        <input asp-for="OutstandingBalance" class="form-control" readonly />
                        <small class="form-text text-muted">Outstanding balance is calculated from transactions and cannot be edited directly</small>
                    </div>
                    
                    <div class="form-check mb-3">
                        <input asp-for="IsClosed" class="form-check-input" type="checkbox" />
                        <label asp-for="IsClosed" class="form-check-label"></label>
                        <small class="form-text text-muted d-block">Check to close the account (no new transactions can be added)</small>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" asp-route-personId="@Model.PersonCode" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
