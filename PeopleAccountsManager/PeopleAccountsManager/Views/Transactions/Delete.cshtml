@model PeopleAccountsManager.Models.Transaction
@{
    ViewData["Title"] = "Delete Transaction";
}

<h1 class="text-danger">
    <i class="bi bi-trash"></i> Delete Transaction
</h1>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Are you sure you want to delete this transaction? The account balance will be adjusted automatically.
</div>

<div class="card shadow">
    <div class="card-body">
        <h4>Transaction Details</h4>
        <dl class="row">
            <dt class="col-sm-3">Account</dt>
            <dd class="col-sm-9">@Model.Account?.AccountNumber</dd>
            
            <dt class="col-sm-3">Person</dt>
            <dd class="col-sm-9">@Model.Account?.Person?.FullName</dd>
            
            <dt class="col-sm-3">Transaction Date</dt>
            <dd class="col-sm-9">@Model.TransactionDate.ToString("yyyy-MM-dd")</dd>
            
            <dt class="col-sm-3">Capture Date</dt>
            <dd class="col-sm-9">@Model.CaptureDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
            
            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">
                <span class="@(Model.Amount < 0 ? "text-danger" : "text-success")">
                    <strong>@Model.Amount.ToString("C")</strong>
                </span>
                @if (Model.Amount > 0)
                {
                    <span class="badge bg-success">Credit</span>
                }
                else
                {
                    <span class="badge bg-danger">Debit</span>
                }
            </dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
        
        <div class="alert alert-info" role="alert">
            <strong>Note:</strong> Deleting this transaction will adjust the account balance by @((-Model.Amount).ToString("C")).
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Code" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete Transaction
            </button>
            <a asp-action="Index" asp-route-accountId="@Model.AccountCode" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
